<nav>
    <div class="nav-left">
        <a href="/">
            <img src="<%= logoPath || '/images/logo.png' %>" alt="<%= logoAlt || 'Vivify Logo' %>">
        </a>
        <a href="/about">About</a>
    </div>
    <div class="nav-right" id="nav-right"></div>
</nav>

<script>
    document.addEventListener('DOMContentLoaded', async () => {
        const navRight = document.getElementById('nav-right');

        try {
            const response = await fetch('/api/user'); // Replace with your user API
            if (response.ok) {
                const user = await response.json();

                // Render user profile and logout link
                navRight.innerHTML = `
                    <div id="profile-menu">
                        <img 
                            src="${user.profilePicture || '/images/default-profile.png'}" 
                            id="profile-icon" 
                            alt="Profile Icon" 
                            onerror="this.src='/images/default-profile.png';"
                        >
                        <span>Welcome, ${user.username || 'User'}!</span>
                    </div>
                    <a href="/auth/logout" id="logout-link">Logout</a>
                `;
            } else {
                // Render login and signup links if not logged in
                navRight.innerHTML = `
                    <a href="/auth/signup" id="signup-link">Sign Up</a>
                    <a href="/auth/login" id="login-link">Login</a>
                `;
            }
        } catch (error) {
            console.error('Error fetching user data:', error);

            // Fallback links in case of an error
            navRight.innerHTML = `
                <a href="/auth/signup" id="signup-link">Sign Up</a>
                <a href="/auth/login" id="login-link">Login</a>
            `;
        }
    });
</script>

<style>
    /* Basic Styling */
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
        background-color: #333;
        color: white;
    }

    .nav-left a,
    .nav-right a {
        margin: 0 10px;
        text-decoration: none;
        color: white;
    }

    #profile-menu {
        display: flex;
        align-items: center;
    }

    #profile-icon {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        margin-right: 10px;
    }

    @media (max-width: 768px) {
        nav {
            flex-direction: column;
            text-align: center;
        }

        .nav-right {
            margin-top: 10px;
        }
    }
</style>
