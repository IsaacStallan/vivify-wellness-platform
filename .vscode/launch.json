{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open index.html",
            "file": "/Users/isaacstallan/Library/Mobile Documents/com~apple~CloudDocs/MyWebsite/index.html"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Backend Server",
            "program": "${workspaceFolder}/server.js", 
            "restart": true,
            "env": {
                "NODE_ENV": "development"
            },
            "outFiles": ["${workspaceFolder}/**/*.js"],
            "console": "integratedTerminal"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Frontend (With Server)",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/public"
        }
    ]
}
